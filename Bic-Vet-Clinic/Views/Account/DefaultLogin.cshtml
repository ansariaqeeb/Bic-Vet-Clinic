@model DataModel.LoginModel.LoginModels
@{
    ViewBag.Title = "BIC : Login Page";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta charset="utf-8" />
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <title>Login Page</title>
    <meta name="description" content="User login page" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />
    @System.Web.Optimization.Scripts.Render("~/bundles/LoginCommonJS")
    @System.Web.Optimization.Styles.Render("~/Content/LoginCommonCSS")


    <style type="text/css">
        body {
            font-family: 'Segoe UI' !important;
        }

        label {
            font-weight: 500;
            font-size: 14px;
        }

        .border-radius {
            border-radius: 0 !important;
        }

        .blueline {
            width: 100%;
            height: 10px;
            background-color: #4ab6ed;
            margin-top: -17px;
        }

        .titletext {
            font-size: 24px;
            font-weight: 500;
            margin-bottom: 16px;
            margin-top: 18px;
            color: #5b5b5b !important;
            font-family: 'Segoe UI' !important;
            text-align: center;
        }

        .clsStar {
            line-height: 0;
            font-weight: bold;
            font-size: 150% !important;
            color: #4AB6ED;
        }

        .login-box .toolbar {
            background: #5090C1 !important;
            border-top: 2px solid #597597 !important;
        }
    </style>

</head>
<body class="login-layout">
    <div class="main-container">
        <div class="main-content">
            <div class="row">
                <div class="col-sm-10 col-sm-offset-1">
                    <div class="login-container">

                        <div class="center">
                            <h1>
                                <i class="ace-icon fa fa-leaf green"></i>
                                <span class="red">BIC</span>
                                <span class="white" id="id-text2">Solution</span>
                            </h1>
                            <h4 class="blue" id="id-company-text">&copy; Company Name</h4>
                        </div>


                        <div class="position-relative">
                            <div id="login-box" class="login-box visible widget-box no-border">
                                <div class="widget-body">
                                    <div class="widget-main">
                                        <h4 class="header blue lighter bigger">
                                            <i class="ace-icon fa fa-coffee green"></i>
                                            Animalia
                                        </h4>
                                        <div class="space-6"></div>
                                        @using (Html.BeginForm("DefaultLogin", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
                                        {
                                            <fieldset>
                                                <label class="block clearfix">
                                                    <span class="block input-icon input-icon-right">
                                                        @Html.TextBoxFor(m => m.userName, new { @placeholder = "User ID", @Value = "", @class = "form-control" })
                                                        <i class="ace-icon fa fa-user"></i>
                                                    </span>
                                                    <span id="errorFile" style="color: Red;">@Html.ValidationMessageFor(model => model.userName)</span>
                                                </label>
                                                <label class="block clearfix">
                                                    <span class="block input-icon input-icon-right">
                                                        @Html.PasswordFor(m => m.password, new { @placeholder = "Password", @class = "form-control", @value = "" })
                                                        <i class="ace-icon fa fa-lock"></i>
                                                    </span>
                                                    <span id="errorFile" style="color: Red;">@Html.ValidationMessageFor(model => model.password)</span>
                                                </label>

                                                <div class="col-sm-12 col-xs-12 no-padding" style="margin-top:5px;">
                                                    <div style="color: Red;">
                                                        <span id="errorvalidFile">@Html.ValidationMessage("ErrorMgr")</span>
                                                    </div>
                                                    <br />
                                                    <button type="submit" class="width-35 pull-right btn btn-sm btn-primary">
                                                        <i class="ace-icon fa fa-key"></i>
                                                        <span class="bigger-110">Login</span>
                                                    </button>
                                                    <br />
                                                </div>
                                                <div class="space-4"></div>
                                            </fieldset>
                                        }
                                        <div class="social-or-login center">
                                            <span class="bigger-110">Agents Login</span>
                                        </div>
                                        <div class="space-6"></div>
                                        <div class="social-login center">
                                            <a class="btn btn-primary" title="Agents Login" href="/Account/Login">
                                                <i class="ace-icon fa fa-user"></i>
                                            </a>
                                        </div>
                                    </div><!-- /.widget-main -->
                                    <div class="toolbar clearfix">
                                        <div class="user-signup-link" style="font-size: 10px;color: whitesmoke;width: 100% !important; text-align: right;">
                                            Copyright (C) 2019 BIC Solutions All rights reserved.
                                        </div>
                                    </div>
                                </div><!-- /.widget-main -->

                            </div><!-- /.widget-body -->
                        </div><!-- /.login-box -->

                    </div><!-- /.position-relative -->

                </div>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.main-content -->
    </div><!-- /.main-container -->
    <!-- basic scripts -->
    <!--[if !IE]> -->
    <script type="text/javascript">
        window.jQuery || document.write("<script src='../assets/js/jquery.js'>" + "<" + "/script>");
    </script>
    <script type="text/javascript">
        if ('ontouchstart' in document.documentElement) document.write("<script src='../assets/js/jquery.mobile.custom.js'>" + "<" + "/script>");
    </script>


</body>
</html>

<script type="text/javascript">
    //Script for Forget Password
    function show_box(id) {
        jQuery('.widget-box.visible').removeClass('visible');
        jQuery('#' + id).addClass('visible');
        $('#LoadForgetPassword').html("");
    }
</script>
